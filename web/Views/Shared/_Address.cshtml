@using Core.Enums
@model Core.Models.Address

<div class="form-group row" id="inputAddressGroup">
    <div class="col-md-11">
        <label asp-for="AddressOne">Address One</label>
        <input asp-for="AddressOne" class="form-control" id="inputAddressOne">
        <span asp-validation-for="AddressOne" class="text-danger"></span>
    </div>
    <div class="col-md-1">
        <i data-toggle="button" class="fa fa-edit btn d-none" id="addressEditButton"></i>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-11">
        <label asp-for="AddressTwo">Address Two</label>
        <input asp-for="AddressTwo" class="form-control" id="inputAddressTwo">
        <span asp-validation-for="AddressTwo" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-5">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" id="inputAddressCity">
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="State"></label>
        <select class="form-control" asp-for="State" asp-items="Html.GetEnumSelectList<StateEnum>()" id="inputAddressState">
        </select>
    </div>
    <div class="col-md-4">
        <label asp-for="Zip">Zip Code</label>
        <input asp-for="Zip" class="form-control" id="inputAddressZip">
        <span asp-validation-for="Zip" class="text-danger"></span>
    </div>
</div>